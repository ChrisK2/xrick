#ifndef XRICK_CONFIG_H
#define XRICK_CONFIG_H

/* version */
#define XRICK_VERSION_STR "${XRICK_VERSION_STR}"

/* graphics (choose one) */
#cmakedefine GFXST
#cmakedefine GFXPC

/* joystick support */
#cmakedefine ENABLE_JOYSTICK

/* sound support */
#cmakedefine ENABLE_SOUND

/* cheats support */
#cmakedefine ENABLE_CHEATS

/* auto-defocus support */
/* does seem to cause all sorts of problems on BeOS, Windows... */
#cmakedefine ENABLE_FOCUS

/* development tools */
#cmakedefine ENABLE_DEVTOOLS

/* enable/disable subsystem debug */
#cmakedefine DEBUG_MEMORY
#cmakedefine DEBUG_ENTS
#cmakedefine DEBUG_SCROLLER
#cmakedefine DEBUG_MAPS
#cmakedefine DEBUG_JOYSTICK
#cmakedefine DEBUG_EVENTS
#cmakedefine DEBUG_AUDIO
#cmakedefine DEBUG_AUDIO2
#cmakedefine DEBUG_VIDEO
#cmakedefine DEBUG_VIDEO2

/* compressed archive support*/
#cmakedefine ENABLE_ZIP

#endif /* XRICK_CONFIG_H */

/* eof */

